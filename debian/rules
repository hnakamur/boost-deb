	# package libboost-signals$(SOVERSION)
	dh_install -plibboost-signals$(SOVERSION)$(DEBIAN_SUFFIX) --autodest \
	   debian/tmp/usr/lib/libboost_signals$(release_suffix).so.$(SOVERSION)
